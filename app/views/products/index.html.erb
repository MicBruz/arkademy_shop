<section class="section" xmlns="http://www.w3.org/1999/html">
  <p id="notice"><%= notice %></p>

  <div class="container">
    <h1 class = "title">Products</h1>
    <h2 class = "subtitle">Products index page</h2>

    <table class="table is-bordered is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>ID</th>
          <th>Product</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @products.sort.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td>
              <div class="fields is-grouped">
                <p class="control">
                  <button class="button is-small is-info"><%= link_to 'Show', product %></button>
                  <button class="button is-small is-warning"><%= link_to 'Edit', edit_product_path(product) %></button>
                  <button class="button is-small is-danger"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                </p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="container mt-5">
    <button class="button is-info"><%= link_to 'New Product', new_product_path %></button>
  </div>
</section>